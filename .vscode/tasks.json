{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "cl.exe build active file",
      "command": "g++",
      "args": [
        "-std=gnu++17",
        "${fileDirname}/${fileBasenameNoExtension}.cpp",
        "-o",
        "a.out",
        "&&",
        "./a.out"
      ],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
